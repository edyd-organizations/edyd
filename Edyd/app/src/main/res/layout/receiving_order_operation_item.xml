<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/order_number"/>
                <TextView
                    android:id="@+id/orderNumView"
                    android:layout_toRightOf="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="1234567890"
                    android:textColor="@color/gray_5d5d5d" />
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/gray_818181"
                    android:text="2015-11-11"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/from_to"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_818181"
                    android:text="福建厦门"/>
                <TextView
                    android:layout_width="15dp"
                    android:id="@+id/line"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/from_to"
                    android:layout_height="2dp"
                    android:background="@color/gray_818181"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/from"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/line"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_818181"
                    android:text="福建晋江"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <LinearLayout
                    android:id="@+id/l_start_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/starting_point"/>
                    <TextView
                        android:id="@+id/tv_addr_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:textSize="15sp"
                        android:text="晋江市"
                        android:textColor="@color/gray_5d5d5d" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/consignor"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:textSize="14sp"
                            android:textColor="@color/gray_5d5d5d"
                            android:text="发货人"/>
                        <TextView
                            android:id="@+id/shipper_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="张三"
                            android:layout_marginLeft="8dp"
                            android:textColor="@color/gray_5d5d5d"/>
                        <TextView
                            android:id="@+id/phone_number_one"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:text="15080212174"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_5d5d5d"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>