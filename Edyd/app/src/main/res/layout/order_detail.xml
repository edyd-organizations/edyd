                        android:layout_height="180dp"
                        android:gravity="left">
                        <ImageView
                            android:id="@+id/execute_first_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_circle_green"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/execute_green"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/execute_first_point"
                            android:layout_alignLeft="@id/execute_first_point"
                            android:gravity="center"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="接单"/>
                            <TextView
                                android:id="@+id/execute_first_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="15:59"/>
                            <TextView
                                android:id="@+id/execute_first_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="10sp"
                                android:text="09-14"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/execute_first_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/execute_first_point"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/line_green"/>
                        <ImageView
                            android:id="@+id/execute_second_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_circle_green"
                            android:layout_toRightOf="@id/execute_first_line"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/execute_green"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_above="@id/execute_second_point"
                            android:layout_alignRight="@id/execute_second_point"
                            android:layout_toLeftOf="@id/execute_second_point"
                            android:gravity="center"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/execute_second_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="09-14"/>
                            <TextView
                                android:id="@+id/execute_second_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:text="17:25"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="到达装货" />
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/execute_second_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/execute_second_point"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/line_green"/>
                        <ImageView
                            android:id="@+id/execute_third_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_circle_green"
                            android:layout_toRightOf="@id/execute_second_line"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/execute_green"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/execute_third_point"
                            android:layout_alignLeft="@id/execute_third_point"
                            android:layout_toRightOf="@id/execute_third_point"
                            android:gravity="center"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="完成装货" />
                            <TextView
                                android:id="@+id/execute_third_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="20:46"/>
                            <TextView
                                android:id="@+id/execute_third_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:layout_marginTop="5dp"
                                android:text="09-14"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/execute_third_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/execute_third_point"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/line_green"/>
                        <ImageView
                            android:id="@+id/execute_four_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_circle_green"
                            android:layout_toRightOf="@id/execute_third_line"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/line_car"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_above="@id/execute_four_point"
                            android:layout_alignLeft="@id/execute_four_point"
                            android:layout_toRightOf="@id/execute_four_point"
                            android:gravity="center"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:textColor="@color/black"
                                android:text="09-14"/>
                            <TextView
                                android:id="@+id/execute_four_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/black"
                                android:textSize="12sp"
                                android:text="21:09"/>
                            <TextView
                                android:id="@+id/execute_four_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/black"
                                android:text="在途中"
                                android:layout_below="@id/execute_four_point"
                                android:layout_toRightOf="@id/execute_four_point"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/execute_four_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/execute_four_point"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/line_grey"/>
                        <ImageView
                            android:id="@+id/execute_five_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_circle_green"
                            android:layout_toRightOf="@id/execute_four_line"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/execute_gray"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/execute_five_point"
                            android:layout_alignLeft="@id/execute_five_point"
                            android:layout_toRightOf="@id/execute_five_point"
                            android:gravity="center"
                            android:layout_marginTop="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="到达卸货" />
                            <TextView
                                android:id="@+id/execute_five_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:textSize="12sp"
                                android:text="21:45"/>
                            <TextView
                                android:id="@+id/execute_five_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:layout_marginTop="5dp"
                                android:text="09-14"/>
                        </LinearLayout>
                        <ImageView
                            android:id="@+id/execute_five_line"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/execute_five_point"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/line_grey"/>
                        <ImageView
                            android:id="@+id/execute_six_point"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/view_circle_green"
                            android:layout_toRightOf="@id/execute_five_line"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/execute_gray"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_above="@id/execute_six_point"
                            android:layout_alignRight="@id/execute_six_point"
                            android:layout_toLeftOf="@id/execute_six_point"
                            android:gravity="center"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:id="@+id/execute_six_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="10sp"
                                android:text="09-14"/>
                            <TextView
                                android:id="@+id/execute_six_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:textSize="12sp"
                                android:text="17:25"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="装货地" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bright_foreground_light_disabled"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<!--                <TextView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:background="#ff6600"
                    android:text="未完成"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>-->
                <ImageView
                    android:id="@+id/order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_have_been_receive"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:text="订单号:"/>
                        <TextView
                            android:id="@+id/order_number"
                            android:layout_toRightOf="@+id/tv_order_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black"
                            android:text="EDR43286F846"/>
                        <TextView
                            android:id="@+id/order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/gray_999999"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="40dp"
                            android:text="2015-9-22"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp">
                        <LinearLayout
                            android:id="@+id/l_start_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="left">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/starting_point"/>
                            <TextView
                                android:id="@+id/receive_order_start_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="7dp"
                                android:textSize="15sp"
                                android:textColor="@android:color/background_dark" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/l_start_address"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:gravity="left">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/finishing_point"/>
                            <TextView
                                android:id="@+id/receive_order_end_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:layout_marginLeft="7dp"
                                android:textColor="@android:color/background_dark" />
                        </LinearLayout>

                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:src="@mipmap/consignor"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:textSize="14sp"
                                    android:textColor="@color/black"
                                    android:text="发货人"/>
                                <TextView
                                    android:id="@+id/shipper_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_marginLeft="8dp"
                                    android:textColor="@color/black"/>
                                <TextView
                                    android:id="@+id/phone_number_one"
                                    android:layout_width="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:text="15080212174"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center_horizontal">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/cargo_receiver"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="14sp"
                                        android:textColor="@color/black"
                                        android:text="收货人"/>
                                    <TextView
                                        android:id="@+id/consignee"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:text="李小萌"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:id="@+id/consignee_phone_number"
                                        android:layout_width="wrap_content"
                                        android:layout_marginLeft="8dp"
                                        android:text="15080212174"
                                        android:layout_weight="1"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/bright_foreground_light_disabled"/>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货物信息"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:text="货物名称"/>
                    <TextView
                        android:id="@+id/goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:text="货物总体积"/>
                    <TextView
                        android:id="@+id/goods_total_volume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:text="货物总数量"/>
                    <TextView
                        android:id="@+id/goods_total_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:text="货物总重量"/>
                    <TextView
                        android:id="@+id/goods_total_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"/>
                </TableRow>
            </TableLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/bright_foreground_light_disabled"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_DDDDDD"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/detail_receive_order"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:background="@drawable/border_corner_order"
                    android:text="到达装货"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>